{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "skipDefaultLibCheck": true,
        "plugins": [
            {
                "name": "@angular/language-service"
            }
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "paths": {
            "@shared": [
                "app/shared"
            ],
            "@shared/*": [
                "app/shared/*"
            ],
            "@core": [
                "app/core/"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@ngx-shared": [
                "app/shared/ngx-shared"
            ],
            "@feature": [
                "app/feature"
            ],
            "@feature/*": [
                "app/feature/*"
            ],
            "@config": [
                "config"
            ],
            "@config/*": [
                "config/*"
            ],
            "@utils": [
                "app/utils"
            ],
            "@utils/*": [
                "app/utils/*"
            ],
            "@models": [
                "app/business/models"
            ],
            "@models/*": [
                "app/business/models/*"
            ],
            "@services": [
                "app/business/services"
            ],
            "@services/*": [
                "app/business/services/*"
            ],
            "@mat-shared": [
                "app/mat-shared"
            ]
        }
    },
    "angularCompilerOptions": {
        "preserveWhitespaces": "off",
        "annotationsAs": "decorators"
    },
    "include": [
        "src/**/*",
        "node_modules/ngx-uploader/src/**/*",
        "node_modules/echarts-ng2/src/**/*"
    ]
}